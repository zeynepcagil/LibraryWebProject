@model Library_Project.Models.LoginViewModel

<h2>Sign In</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>

    <button type="submit">Login</button>
</form>

<div asp-validation-summary="All"></div>
