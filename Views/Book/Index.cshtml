@model IEnumerable<Library_Project.Models.Book>

@{
    ViewData["Title"] = "Book Management";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark"><i class="fas fa-cogs text-warning me-2"></i>Book Management</h2>
            <p class="text-muted mb-0">Manage library inventory, update stocks, and track status.</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-1"></i> Add New Book
        </a>
    </div>

    <div class="card shadow border-0 overflow-hidden">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 text-secondary"><i class="fas fa-list me-2"></i>Inventory List</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Year</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th class="text-end pe-4" style="min-width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-muted">#@item.BOOK_ID</td>
                            <td class="fw-bold text-dark">@item.TITLE</td>
                            <td>@item.AUTHOR</td>
                            <td><span class="badge bg-light text-dark border">@item.CATEGORY</span></td>
                            <td>@item.PUBLICATION_YEAR</td>
                            <td>
                                @if (item.STOCK < 3 && item.STOCK > 0)
                                {
                                    <span class="text-warning fw-bold"><i class="fas fa-exclamation-circle"></i> @item.STOCK</span>
                                }
                                else if (item.STOCK == 0)
                                {
                                    <span class="text-danger fw-bold">0</span>
                                }
                                else
                                {
                                    <span class="text-success fw-bold">@item.STOCK</span>
                                }
                            </td>
                            <td>
                                @if (item.STATUS)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success px-2 py-1">
                                        <i class="fas fa-check-circle me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger px-2 py-1">
                                        <i class="fas fa-ban me-1"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.BOOK_ID" class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Loan" asp-route-bookId="@item.BOOK_ID" class="btn btn-sm btn-outline-warning" title="Loan Book">
                                        <i class="fas fa-hand-holding-box"></i> Loan
                                    </a>
                                    <a asp-action="Return" asp-route-loanId="@item.BOOK_ID" class="btn btn-sm btn-outline-dark" title="Return Book">
                                        <i class="fas fa-undo"></i> Return
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>